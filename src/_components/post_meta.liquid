<p class="small-caps">
    <span itemprop="author">{{ site.data.authors[page.author].name | downcase }}</span>
    {% if page.date %}
    <span class="meta-tag">
        <time datetime="{{ page.date | date: "%Y-%m-%d" }}" itemprop="datePublished">{{ page.date | date: "%-d %b %Y" | downcase }}</time>
    </span>
    {% else %}
    <span class="meta-tag">
        <time datetime="{{ page.date | date: "%Y-%m-%d" }}" itemprop="datePublished">{{ page.date | date: "%-d %b %Y" | downcase }}</time>
    </span>
    {% endif %}
    {% if home != "true" %}
    {% if page.tags.size >= 1 %}
        <span class="meta-tag" itemprop="keywords">
        {% for tag in page.tags %}
            <a href="/tags/{{ tag | downcase }}">#{{ tag }}</a>{% unless forloop.last %},{% endunless %} 
        {% endfor %}
        </span>
    {% endif %}
    {% if page.date_modified %}
    <span class="meta-tag post-updated">
        updated <time datetime="{{ page.date_modified | date: "%Y-%m-%d" }}" itemprop="dateModified">{{ page.date_modified | date: "%-d %b %Y" | downcase}}</time>
    </span>
    {% endif %}
    {% if page.author %}
    <span class="meta-tag">
        <a href="{{ site.metadata.github.repository_url }}/edit/main/src/{{ page.relative_path }}" target="_blank" rel="noopener">edit</a> this page
    </span>
    {% endif %}
    {% endif %}
</p>