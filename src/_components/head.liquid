<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
{% capture resource_title %}{{ title | strip_html | strip_newlines }}{% endcapture %}
<title>{% if resource_title != "Index" %}{{ resource_title | escape }} | {{ metadata.title | escape }}{% else %}{{ metadata.title | escape }}: {{ metadata.tagline | escape }}{% endif %}</title>
{% if page.next %}
<link rel="next" href="{{ page.next.relative_url }}">
{% endif %}
{% if page.previous %}
<link rel="prev" href="{{ page.previous.relative_url }}">
{% endif %}

<meta name="description" content="{{ metadata.description }}" />

<link rel="stylesheet" href="{% asset_path css %}" data-turbo-track="reload"/>
<script src="{% asset_path js %}" data-turbo-track="reload" defer></script>
{% live_reload_dev_js %}
