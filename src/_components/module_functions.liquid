# Functions

<aside class="postscontainer">
    {%- for post in collections.OnlineHelp.resources -%}
    {% assign downtitle = title | downcase %}
    {% if post.category == downtitle %}
    <div class="post-list borderl">
        <h2 class="post-title"><a href="{{ post.relative_url }}">{{ post.data.title }}</a></h2>
        {{ post.excerpt  }}
    </div>
    {%- endif -%}
    {%- endfor -%}
</aside>