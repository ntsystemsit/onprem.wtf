<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head", metadata: site.metadata, title: page.title %}
  </head>
  <body class="{{ resource.data.layout }} {{ resource.data.page_class }}">
    {% render "navbar", metadata: site.metadata, resource: resource, nav: site.data.nav %}

    <main>
      {{ content }}
    </main>

    {% render "footer", site: site %}
  </body>
</html>
